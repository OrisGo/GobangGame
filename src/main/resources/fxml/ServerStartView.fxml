<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400" prefWidth="500" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gobang.server.ServerStartController">

    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="联机对战 - 服务端管理" />
        </VBox>
    </top>

    <center>
        <!-- 修改点 2: 原来的 padding="20" 也是错的，改为如下格式 -->
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- 左侧端口配置 -->
            <VBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="服务端端口配置" />
                <TextField fx:id="tfServerPort" prefWidth="150" promptText="请输入端口号（默认8888）" />
                <HBox spacing="15">
                    <Button fx:id="btnStartServer" onAction="#onStartServerClicked" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="启动服务端" />
                    <Button fx:id="btnStopServer" onAction="#onStopServerClicked" prefWidth="100" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;" text="停止服务端" />
                </HBox>
                <Label fx:id="lblServerStatus" style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="服务端状态：未启动" />
            </VBox>

            <!-- 右侧已连接客户端列表 -->
            <VBox prefWidth="250" spacing="10">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="已连接客户端列表" />
                <ListView fx:id="lvConnectedClients" style="-fx-background-color: white;" />
                <Label fx:id="lblClientCount" style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="当前在线：0 人" />
            </VBox>
        </HBox>
    </center>
</BorderPane>
